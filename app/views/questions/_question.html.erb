<li class="question" id="<%= question.id %>">
<img src="<%= question.user.try :avatar %>" alt="">
<div class="question-section">
  <div class="question-title">
    <%= link_to question.title,question_path(question)  %>
  </div>
  <div class="question-details">
    <% if question.course %>
      <%= question.course.name %>  •  <%= question.user.name %>  •  <%= question.updated_at.strftime("%Y-%m-%d %H:%M")%>   <% if question.answers.last %>•  最后回复来自<%= question.answers.last.question.user.name %> <% end %>
    <% end %>
		</div>
	</div>
  <% if current_user.is_admin? %>
    <div class="remove-question">
      <%= link_to "删除", question_path(question), :method => "DELETE"%>
    </div>
  <% end %>
	<div class="question-has-answer">
		<span class="badge"><%= question.answers.count %></span>
	</div>
</li>
