<div class="container">
  <div class="span8">
    <div class="span8">
      <div class="single-question span7">
        <div class="question-header span7">
          <div class="question-left-header span5">
            <div class="question-parent">

            </div>
            <div class="question-title">
              <%= @question.title %>
            </div>
            <div class="question-details">
              <%= @question.content %>
            </div>
          </div>
          <div class="question-right-avatar span1">
            <img src="<%= @question.user.avatar %>" alt="">
          </div>
        </div>

        <div class="question-body">
        </div>
        <div class="question-footer pull-right">
          最后更新时间: <%= @question.updated_at.strftime("%Y-%m-%d %H:%M")%>
        </div>
      </div>
    </div>

    <div class="span8">
      <div class="answers span7">
        <%= render( :partial => 'answers/answer' , :collection => @answers )%>
      </div>
    </div>

    <% if current_user %>
      <div class="span8">
        <div class="question-add-answer span7">
          <%= simple_form_for [@question, @question.answers.build]  do |f| %>
            <input type='hidden' name='user_id' value='<%= @question.user.id%>'/>
            <%= f.input :content , :as => :text ,:placeholder=>"请在这里描述您的回答" ,:input_html => { :class => 'span7' ,:rows=>"10"} %>
            <%= f.button :submit, "发布" , :class=>"btn btn-primary"%>
          <% end %>
        </div>
      </div>
    <%end %>
  </div>
  <%= render 'home/user_sidebar' %>
</div>
